        <main class="events mb-4 mt-4">
            <div class="submit-concern-container dp-f fd-c gp-10">
                <button class="view-concerns btn as-fe">View concerns</button>
                <form class="border-subtle-effect pt-2 pb-2 pl-3 pr-3 br-20">
                    <div class="pt-2 pb-1 form-header">
                        <h3 class="fs-2-lg text-dark-accent">
                            Submit concerns or suggestions
                        </h3>
                    </div>
                    <div class="form-body">
                        <textarea
                            class="w-100 br-20"
                            rows="8"
                            name=""
                            id=""
                        ></textarea>
                    </div>
                    <div class="form-footer pt-1 pb-2">
                        <button class="br-20 p-1 btn-dark-accent w-100">
                            Submit
                        </button>
                    </div>
                </form>
            </div>

            <aside class="concerns-aside-box">
                <div class="br-20 border-subtle-effect aside concerns-box">
                    <div class="dp-f concern-popup-controls">
                        <div
                            data-status="pending"
                            class="ta-c concern-status selected"
                        >
                            <span
                                class="pending bgc-mac-blue concern-popup-circle"
                            ></span>
                            <p>Acknowlegded</p>
                        </div>

                        <div
                            data-status="inProgress"
                            class="ta-c concern-status"
                        >
                            <span
                                class="in-progress bgc-progress concern-popup-circle"
                            ></span>
                            <p>In Progress</p>
                        </div>

                        <div data-status="resolved" class="ta-c concern-status">
                            <span
                                class="resolved bgc-mac-green concern-popup-circle"
                            ></span>
                            <p>Resolved</p>
                        </div>
                    </div>

                    <div class="container concern-popup-body"></div>
                </div>
            </aside>
        </main>

        <div class="container concern-popup-overlay">
            <div class="concerns-box popup">
                <div class="concern-popup-header dp-f">
                    <button class="btn-no-hover p-1 close-concern-popup-btn">
                        <svg
                            class="close-icon"
                            height="24px"
                            viewBox="0 -960 960 960"
                            width="24px"
                            fill="#e8eaed"
                        >
                            <path
                                d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"
                            />
                        </svg>
                    </button>
                </div>

                <div class="dp-f concern-popup-controls">
                    <div
                        data-status="pending"
                        class="ta-c concern-status selected"
                    >
                        <span
                            class="pending bgc-mac-red concern-popup-circle"
                        ></span>
                        <p>Pending</p>
                    </div>

                    <!-- <div class="separator">|</div> -->
                    <!-- <div class="ta-c concern-status"> -->
                    <!--     <span -->
                    <!--         class="acknowlegded bgc-mac-blue concern-popup-circle" -->
                    <!--     ></span> -->
                    <!--     <p>Acknowlegded</p> -->
                    <!-- </div> -->

                    <div data-status="inProgress" class="ta-c concern-status">
                        <span
                            class="in-progress bgc-progress concern-popup-circle"
                        ></span>
                        <p>In Progress</p>
                    </div>

                    <!-- <div class="separator">|</div> -->

                    <div data-status="resolved" class="ta-c concern-status">
                        <span
                            class="resolved bgc-mac-green concern-popup-circle"
                        ></span>
                        <p>Resolved</p>
                    </div>
                </div>

                <div class="concern-popup-body"></div>
            </div>
        </div>

        <!--FOOTER-->
        <%- include('./partials/footer.ejs') %>

        <script type="module" src="app.bundle.js"></script>
        <script type="module" src="nav.bundle.js"></script>
        <script defer type="module" src="concerns.bundle.js"></script>
    </body>
</html>
