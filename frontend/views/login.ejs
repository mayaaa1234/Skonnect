        <div class="auth-wrapper container">
            <form
                autocomplete="off"
                id="login-form"
                class="br-20"
                action=""
                novalidate
            >
                <h1 class="">Login to SKonnect</h1>

                <div class="input-box">
                    <input
                        id="user-identifier"
                        type="text"
                        name="user-identifier"
                        required
                        minlength="4"
                        maxlength="100"
                        placeholder=""
                    />
                    <label for="user-identifier">Username or Email</label>
                    <span></span>
                </div>
                <div data-error-for="user-identifier" class="error"></div>

                <div class="input-box">
                    <input
                        id="password"
                        type="password"
                        name="password"
