<!DOCTYPE html>
<html lang="en" data-page="profile" data-theme="dark">
    <!--HEAD-->
    <%- include('./partials/head.ejs') %>
    <body class="" data-page="profile">
        <%- include('./partials/nav.ejs') %>
        <div class="container mt-2">
            <button class="btn-no-hover profile-btn-show-sidebar">
                <svg
                    class="profile-expand-icon"
                    height="35px"
                    width="35px"
                    fill="#e8eaed"
                    viewBox="0 -960 960 960"
                >
                    <path
                        d="M518.33-480 390.67-352.33l46.66 47.66L612.67-480 437.33-655.33l-46.66 47.66L518.33-480ZM480-80q-83 0-156-31.5t-127-85.83q-54-54.34-85.5-127.34T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 155.67 31.5 72.66 31.5 127 85.5Q817-709 848.5-636T880-480q0 82.33-31.5 155.33-31.5 73-85.83 127.34-54.34 54.33-127 85.83Q563-80 480-80Zm0-66.67q138.67 0 236-97.33 97.33-97.33 97.33-236 0-139.33-97.33-236.33t-236-97q-139.33 0-236.33 97t-97 236.33q0 138.67 97 236 97 97.33 236.33 97.33ZM480-480Z"
                    />
                </svg>
            </button>
        </div>

        <%- include('./partials/sidebar.ejs') %>

        <div id="data-container">
            <div class="profile-container container mt-2 dp-f fd-c ai-c gp-50">
                <div class="upper-container br-20 dp-f fd-c p-1">
                    <div class="br-20 js-s upper-top p-1 dp-f ai-c jc-sb w-100">
                        <h1 class="">Profile</h1>
                        <button
                            class="p-1 as-s br-40 btn-outlined-dark-accent test"
                        >
                            Edit profile
                        </button>
                    </div>

                    <div class="br-20 w-100 p-1 upper-bottom">
                        <div class="mb-2 ml-n1 avatar">
                            <img
                                width="150px"
                                class="br-full"
                                src="<%= user.isAdmin ? 'assets/img/makise.jpg' : 'assets/img/default-profile1.png' %>"
                                alt=""
                            />
                        </div>

                        <div class="mb-2 username">
                            <h3>Username</h3>
                            <div data-username>
                                <%= user.username -%>
                                <% if (user.isAdmin) { %>
                                (ADMIN)
                                <% } %>
                            </div>
                            <!--<input required type="text" />-->
                        </div>

                        <div class="mb-2 email">
                            <h3 class="">Email</h3>
                            <!--<div data-email>example@gmail.com</div>-->
                            <div data-email>
                                <%= user.email %>
                            </div>
                            <!--<input required type="text" />-->
                        </div>
                    </div>
                    <!--</div>-->
                </div>

                <div class="lower-container dp-f p-3 jc-sb ai-c br-20">
                    <div>some text</div>
                    <button class="logout btn-dark-accent br-40 p-1 w-100px">
                        Logout
                    </button>
                </div>
            </div>
        </div>

        <br />

        <!--FOOTER-->
        <%- include('./partials/footer.ejs') %>

        <script type="module" src="app.bundle.js"></script>
        <script type="module" src="nav.bundle.js"></script>
        <script type="module" src="profile.bundle.js"></script>
    </body>
</html>
